<div class='row'>
  <div class='col-lg-8 col-12'>
    <%= form_for(@ekid,:html => {multipart: true, class: "form-horizontal", role: "form"}) do |f| %>

      <div class="col-sm-12" style="background-color:blue">
        <font color="white"><h4>MAKLUMAT ANAK</h4></font>
      </div>

      <div class="form-group"> 
        <div class="row">
          <div class="control-label col-sm-8">
            <strong>NAMA ANAK<a style="color: red">*</a></strong>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-8 col-12">
            <%= f.text_field :name, class: "form-control", placeholder: "NAMA PENUH SEPERTI DI MYKID", autofocus: true, required: true %>
          </div>
        </div>
      </div>

      <div class="form-group"> 
        <div class="row">
          <div class="control-label col-sm-8">
            <strong>NO MYKID<a style="color: red">*</a></strong>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-8 col-12">
            <% 
              if @ekid.ic.present?
                icval = @ekid.ic
              else
                icval = params[:ic]
              end 
            %>
            <%= f.text_field :ic, class: "form-control", placeholder: "cth: 141201035647 (tiada dash)", autofocus: true, required: true, value: icval, readonly: true %>
          </div>
        </div>
      </div>

      <div class="form-group"> 
        <div class="row">
          <div class="control-label col-sm-8">
            <strong>JANTINA<a style="color: red">*</a></strong>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-8 col-12">
            <%= f.select :gdr, options_for_select(["Lelaki", 
                                                  "Perempuan"], 
                                                  selected: @ekid.gdr), 
            {include_blank: "SILA PILIH"}, {required: true} %>
          </div>
        </div>
      </div>

      <div class="form-group"> 
        <div class="row">
          <div class="control-label col-sm-8">
            <strong>TARIKH LAHIR<a style="color: red">*</a></strong>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-8 col-12">
            <%= f.date_select :dob, 
                              {order:[:day, :month, :year],
                              prompt: { day: 'HARI', month: 'BULAN', year: 'TAHUN' },
                              start_year: 2009,
                              selected: @ekid.dob}, 
                              {required: true} %>
          </div>
        </div>
      </div>

      <br><div class="col-sm-12" style="background-color:blue">
        <font color="white"><h4>MAKLUMAT KELUARGA</h4></font>
      </div>

      <div class="form-group"> 
        <div class="row">
          <div class="control-label col-sm-8">
            <strong>ALAMAT KEDIAMAN<a style="color: red">*</a></strong>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-8 col-12">
            <%= f.text_area :addr, class: "form-control", placeholder: "Pastikan ada memasukkan poskod, daerah dan negeri", autofocus: true, required: true %>
          </div>
        </div>
      </div>

      <div class="form-group"> 
        <div class="row">
          <div class="control-label col-sm-8">
            <strong>DAERAH YANG DIDIAMI SEKARANG<a style="color: red">*</a></strong>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-8 col-12">
            <%= f.select :dun, options_for_select(["Petaling",
                                                  "Hulu Langat",
                                                  "Klang",
                                                  "Gombak",
                                                  "Kuala Langat",
                                                  "Sepang",
                                                  "Kuala Selangor",
                                                  "Hulu Selangor",
                                                  "Sabak Bernam",
                                                  "Lain-lain"], 
                                                  selected: @ekid.dun), 
            {include_blank: "SILA PILIH"}, {required: true} %>
          </div>
        </div>
      </div>

      <div class="form-group"> 
        <div class="row">
          <div class="control-label col-sm-8">
            <strong>LOKASI PILIHAN<a style="color: red">*</a></strong>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-8 col-12">
            <%= f.select :prefloc, options_for_select(["Shah Alam"], 
                                                  selected: @ekid.prefloc), 
            {include_blank: "SILA PILIH"}, {required: true} %>
            <br>Ujian Saringan akan diadakan disekitar lokasi diatas
          </div>
        </div>
      </div>

      <div class="form-group"> 
        <div class="row">
          <div class="control-label col-sm-8">
            <strong>NO TELEFON UNTUK DIHUBUNGI<a style="color: red">*</a></strong>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-8 col-12">
            <%= f.text_field :mph, class: "form-control", placeholder: "cth: 01162801556 (tiada dash)", autofocus: true, required: true %>
            Pastikan boleh dihubungi melalui whatsapp
          </div>
        </div>
      </div>

      <!-- ABAH -->
      <div class="form-group"> 
        <div class="row">
          <div class="control-label col-sm-8">
            <strong>NAMA BAPA<a style="color: red">*</a></strong>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-8 col-12">
